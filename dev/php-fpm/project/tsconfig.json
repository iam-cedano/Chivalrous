{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"],
      "@/types/client/*": ["./resources/js/pages/client/types/*"],
      "@/data/client/*": ["./resources/js/pages/client/data/*"]
    },
    "typeRoots": ["./resources/js/types/"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}