{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tasks | Change to Production",
            "type": "shell",
            "command": "bash ./.vscode/task-changer.sh production",
            "presentation": {
                "reveal": "never"
            }
        },
        {
            "label": "Docker | docker-compose up",
            "type": "shell",
            "command": "docker-compose -f docker-compose.dev.yaml up -d",
            "presentation": {
                "reveal": "never"
            },
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "Nginx | Reload Configuration File",
            "type": "shell",
            "command": "docker exec -it chivalrous-nginx-1 nginx -s reload",
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}